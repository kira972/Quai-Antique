{% extends 'base.html.twig' %}

{% block title %}Quai Antique - Menu
{% endblock %}

{% block body %}
	<section id="carte">
		<main class="container page-menu py-5 ">
			<h1 class="pb-5">~ Nos menus ~</h1>
			<div class="row g-4">
				{% for menu in menus %}
					<div class="col-12 col-md-4 d-flex justify-content-center">
						<div class="card mb-3" style="max-width: 18rem;">
							<div class="card-header">
								<h2 class="h4 text-white px-3 mb-0">{{menu.name}}</h2>
							</div>
							<div class="card-body text-dark">
								<p class="text-white card-text text-center">{{menu.description}}</p>
							</div>
							<div class="text-white card-footer text-center fw-bold">
								{{menu.price}}
								€
							</div>
						</div>
					</div>
				{% endfor %}

				<div class="d-flex justify-content-center">
					<a id="btn-rounded" class="mt-6" href="{{ path("app_reservation") }}">Réserver</a>

				</div>
			</main>
		</section>
		{{ include("_partials/_contact.html.twig", {'openingTimes': openingTimes, 'restaurant': restaurant}) }}
	{% endblock %}
