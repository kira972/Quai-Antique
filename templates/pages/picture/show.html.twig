{% extends 'base.html.twig' %}

{% block title %}Picture{% endblock %}

{% block body %}
    <h1>Picture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ picture.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ picture.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ picture.description }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ picture.filename }}</td>
            </tr>
            <tr>
                <th>IsFavorite</th>
                <td>{{ picture.isFavorite ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_picture_index') }}">back to list</a>

    <a href="{{ path('app_picture_edit', {'id': picture.id}) }}">edit</a>

    {{ include('picture/_delete_form.html.twig') }}
{% endblock %}
