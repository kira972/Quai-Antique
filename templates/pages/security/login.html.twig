{% extends 'base.html.twig' %}

{% block title %}Quai Antique - Connexion{% endblock %}

{% block body %}

    <main class="login-page">
    <div class="container">
        <h1 class="mt-5">Formulaire de connexion</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
            {{ message }}
            </div>
        {% endfor %}

        {% if error %}
            <div class="alert  alert-danger">
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            </div>
        {% endif %}

        <form action="{{ path('security.login') }}" method="post" class="login-form">
            <div class="row mb-3">
                <div class="label col-12">
                    <label for="username" class="form-label mt-4">Adresse email</label>
<input type="email" class="form-control" id="username" placeholder="quaiAntique@restaurant.fr" name="_username" value="{{ last_username }}">

                </div>
                <div class="label col-12">
                    <label for="password" class="form-label mt-4">Mot de passe</label>
                    <input type="password" class="form-control" id="password" name="_password" placeholder="*******">
                </div>
            </div>
            <div class="wrapper-btn">
                <button type="submit" class="btn-custom">
                    Se connecter
                </button>
            </div>

            <a class="link-inscription" href="{{ path('security.registration') }}">Si vous n'avez pas de compte, inscrivez-vous !</a>
        </form>
    </div>
</main>
{{ include("_partials/_contact.html.twig", {'openingTimes': openingTimes, 'restaurant': restaurant}) }}
<!-- Login Section End -->
{% endblock %}