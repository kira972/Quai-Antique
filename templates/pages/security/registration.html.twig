{% extends "base.html.twig" %}

{% block title %}
    Quai Antique - Inscription
{% endblock %}

{% block body %}
<main class="registration-page">
    <div class="container">
        <h1 class="mt-5">Formulaire d'inscription</h1>
            {{ form_start(form) }}
        <div class="register-form mt-4">
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>

            <div class="row mb-5">
                <div class="col-12">
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname) }}
                </div>
                <div class="col-12">
                    {{ form_label(form.lastname) }}
                    {{ form_widget(form.lastname) }}
                </div>
                <div class="col-12">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>

                <div class="col-12">
                    {{ form_label(form.defaultNumberCover) }}
                    {{ form_widget(form.defaultNumberCover) }}

                    <div class="form-error">
                        {{ form_errors(form.defaultNumberCover) }}
                    </div>
                </div>

                <div class="col-12">
                    <label for="registration_plainPassword_first" class="form-label mt-4">Mot de passe</label>
                    {{ form_widget(form.plainPassword.first) }}
                    <div class="form-error">
                        {{ form_errors(form.plainPassword.first) }}
                    </div>

                    <label for="registration_plainPassword_second" class="form-label mt-4">Confirmation mot de passe</label>
                    {{ form_widget(form.plainPassword.second) }}
                </div>
                <div class="col-12">
                    <label class="form-label mt-4">Pr√©cisez vos allergies</label>
                    {{ form_widget(form.allergie) }}

                    <div class="form-error">
                        {{ form_errors(form.allergie) }}
                    </div>
                </div>

                <div class="wrapper-btn">
                    <button type="submit" class="btn-custom">
                        S'inscrire
                    </button>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
</main>
