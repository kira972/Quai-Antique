{% extends 'base.html.twig' %}

{% block title %}Quai Antique - Carte
{% endblock %}

{% block body %}

	<main class="container page-carte py-5">
		<h1 class="mb-5">~ La carte ~</h1>
		<div class="row row-cols-1 row-cols-md-2 g-4">
			{% for category in categories %}
				{# {{loop.index0}}
																												{{picturesFormules[loop.index0]}} #}

				<div class="col">
					<div class="card">
						<img src="{{asset(picturesFormules[loop.index0])}}" class="card-img-top" alt="...">

						<div class="card-body">
							<h3 class="card-title mt-3">Carte
								{{category.name}}</h3>
							<ul
								class="list-group list-group-flush">
								{# {{category.products}} #}
								{% for product in category.products %}
									{# <li>{{product}}</li>
									<li>{{product.name}}</li>
									<li>{{product.description}}</li>
									<li>{{product.price}}</li> #}
									<li class="list-group-item">
										<h6 class="mt-3">{{product.name}}</h6>

										<p class="text-center">{{product.description}}
										</p>
										<p class=" text-center fw-bold mt-3">{{product.price}}
											€</p>
									</li>
								{% endfor %}
							</ul>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="d-flex justify-content-center">
		<a id="btn-rounded" class="mt-6" href="{{ path("app_reservation") }}">Réserver</a>

	</div>
</main></section>{{ include("_partials/_contact.html.twig", {'openingTimes': openingTimes, 'restaurant': restaurant}) }}{% endblock %}
