{% extends 'base.html.twig' %}

{% block title %}Quai Antique - Carte
{% endblock %}

{% block body %}
	<section id="carte">
		<main class="container page-carte py-5">
			<h1 class="mb-5">~ La carte ~</h1>
			<div class="row row-cols-1 row-cols-md-2 g-4">
				{% for category in categories %}
					<div class="col">
						<div class="card">
							<img src="{{asset("build/images/" ~ category.picture.filename)}}" class="card-img-top" alt="...">
							<section id="carte-body">
								<div class="card-body">
									<h2 class="card-title mt-3">Carte
										{{category.name}}</h2>
									<ul class="list-group list-group-flush">
										{% for product in category.products %}
											<li class="list-group-item">
												<h4 class="h5 mt-3 mb-3">{{product.name}}</h4>
												<p class="text-center">{{product.description| raw }}</p>
												<p class=" price-item text-center fw-bold mt-3">{{product.price}}
													€</p>
											</li>
										{% endfor %}
									</ul>
								</div>
							</section>
						</div>
					</div>
				{% endfor %}
			</div>
			<div class="d-flex justify-content-center">
				<a id="btn-rounded" class="mt-6" href="{{ path("app_reservation") }}">Réserver</a>
			</div>
		</main>
	</section>
	{{ include("_partials/_contact.html.twig", {'openingTimes': openingTimes, 'restaurant': restaurant}) }}
{% endblock %}
