<!-- Contact Section Start -->
    <section id="contact">
        <div class="container">
            <div class="section-header">
                <h2 class="mb-4">Contacter nous</h2>
            </div> 
            
            <div class="row contact-detail">
                <div class="col-md-6 p-0">
                    <div class="contact-col-1">
                        <div class="contact-hours">
                            <h3 class="mb-3">Horaires d'ouverture</h3>

                            {% for openingTime in openingTimes %}
                                <!-- : 12h-14h / 19h-22h</p> -->
                                <p>{{openingTime.dayOfWeek|capitalize}} : {{openingTime.lunchOpen|date('H:i')}} - {{openingTime.lunchClose|date('H:i')}} / {{openingTime.dinnerOpen|date('H:i')}} - {{openingTime.dinnerClose|date('H:i')}} </p>
                            {% endfor %}

                            <!--<p>Dimanche : Ferm√©</p>%-->
                        </div>
                    </div>
                </div>

                <div class="col-md-6 p-0">
                    <div class="contact-col-2">
                        <div class="contact-info">
                            <h3 class="mb-3">Contactez-nous</h3>
                            <p>{{restaurant.address}}</p>
                            <p>{{restaurant.postCode}} {{restaurant.city}}</p>
                            <p>Tel: {{restaurant.phoneNumber}}</p>
                            <p><a href="Quai Antique@resto.fr">{{restaurant.mail}}</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Section End -->